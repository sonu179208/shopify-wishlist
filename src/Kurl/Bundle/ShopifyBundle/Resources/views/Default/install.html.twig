{% extends '::base.html.twig' %}
{% block content %}
<form action="{{ path("kurl_shopify_default_install") }}" method="post" role="form" class="form-horizontal">
    <fieldset>

        <div class="form-group">
            <legend>{% trans %}Install app{% endtrans %}</legend>

            <span class="help-block">{% trans %}Descriptive text?{% endtrans %}</span>

            <div class="input-group">
                <span class="input-group-addon">{{ shop_http_scheme }}://</span>
                {{ form_widget(form.hostname, {attr: {class: "form-control", placeholder: 'Shop URL'|trans }}) }}
            </div>

            {{ form_rest(form) }}
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">{% trans %}Install{% endtrans %}</button>
            <button type="button" class="btn">Cancel</button>
        </div>
    </fieldset>
</form>
{% endblock %}